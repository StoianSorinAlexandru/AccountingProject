@page "/gestions"
@using ProiectConta.Gestions
@using ProiectConta.Localization
@using Volo.Abp.AspNetCore.Components.Web
@inherits ProiectContaComponentBase
@inject IGestionAppService GestionAppService
@inject AbpBlazorMessageLocalizerHelper<ProiectContaResource> LH

<Card>
	<CardHeader>
		<Row Class="justify-content-between">
			<Column ColumnSize="ColumnSize.IsAuto">
				<h2>@L["Gestions"]</h2>
			</Column>
			<Column ColumnSize="ColumnSize.IsAuto">
				<Button Color="Color.Primary" Clicked="OpenCreateGestionModal">
					@L["AddGestion"]
				</Button>
			</Column>
		</Row>
	</CardHeader>
	<CardBody>
		<DataGrid TItem="GestionDto"
				  Data="GestionList"
				  TotalItems="TotalCount"
				  ShowPager="true"
				  PageSize="PageSize">
			<DataGridColumns>
				<DataGridColumn TItem="GestionDto" Field="@nameof(GestionDto.Name)" Caption="@L["Name"]" />
				<DataGridColumn TItem="GestionDto" Caption="@L["Actions"]">
					<Button Color="Color.Primary" OnClick="EditGestionAsync">Edit</Button> |
					<Button Color="Color.Danger" OnClick="DeleteGestionAsync">Delete</Button>
				</DataGridColumn>
			</DataGridColumns>
		</DataGrid>
	</CardBody>
</Card>

<Modal @ref="CreateGestionModal"> 
	<ModalContent IsCentered="true">
		<Form>
			<ModalHeader>
				<ModalTitle>@L["AddGestion"]</ModalTitle>
				<CloseButton OnClick="CloseCreateGestionModal" />
			</ModalHeader>
			<ModalBody>
				<Field>
					<FieldLabel>@L["Name"]</FieldLabel>
					<TextEdit @bind-Value="@NewGestion.Name" />
				</Field>
			</ModalBody>
			<ModalFooter>
				<Button Color="Color.Primary" Type="@ButtonType.Submit" OnClick="CreateGestionAsync">@L["Save"]</Button>
				<Button Color="Color.Secondary" Type="@ButtonType.Submit" OnClick="CloseCreateGestionModal">@L["Cancel"]</Button>
			</ModalFooter>
		</Form>
	</ModalContent>

</Modal>

<Modal @ref="EditGestionModal">
	<ModalContent IsCentered="true">
		<Form>
			<ModalHeader>
				<ModalTitle>@L["EditGestion"]</ModalTitle>
				<CloseButton OnClick="CloseEditGestionModal" />
			</ModalHeader>
			<ModalBody>
				<Field>
					<FieldLabel>@L["Name"]</FieldLabel>
					<TextEdit @bind-Value="@EditingGestion.Name" />
				</Field>
			</ModalBody>
			<ModalFooter>
				<Button Color="Color.Primary" Type="@ButtonType.Submit" OnClick="UpdateGestionAsync">@L["Save"]</Button>
				<Button Color="Color.Secondary" Type="@ButtonType.Submit" OnClick="CloseEditGestionModal">@L["Cancel"]</Button>
			</ModalFooter>
		</Form>
	</ModalContent>
</Modal>
