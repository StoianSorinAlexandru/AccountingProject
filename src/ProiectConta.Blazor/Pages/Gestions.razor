@page "/gestions"
@using ProiectConta.Gestions
@using ProiectConta.Localization
@using Volo.Abp.AspNetCore.Components.Web
@inherits ProiectContaComponentBase
@inject IGestionAppService GestionAppService
@inject AbpBlazorMessageLocalizerHelper<ProiectContaResource> LH

<Card>
	<CardHeader>
		<Row Class="justify-content-between">
			<Column ColumnSize="ColumnSize.IsAuto">
				<h2>@L["Gestions"]</h2>
			</Column>
			<Column ColumnSize="ColumnSize.IsAuto">
				<Button Color="Color.Primary" Clicked="OpenCreateGestionModal">
					@L["AddGestion"]
				</Button>
			</Column>
		</Row>
	</CardHeader>
	<CardBody>
		<DataGrid TItem="GestionDto"
				  Data="GestionList"
				  TotalItems="TotalCount"
				  ShowPager="true"
				  PageSize="PageSize">
			<DataGridColumns>
				<DataGridColumn TItem="GestionDto"
								Field="@nameof(GestionDto.Id)"
								Caption="@L["Actions"]">
					<DisplayTemplate>
						<Dropdown>
							<DropdownToggle Color="Color.Primary">
								@L["Actions"]
							</DropdownToggle>
							<DropdownMenu>
								<DropdownItem Clicked="() => OpenEditGestionModal(context)">
									@L["Edit"]
								</DropdownItem>
								<DropdownItem Clicked="() => DeleteGestionAsync(context)">
									@L["Delete"]
								</DropdownItem>
							</DropdownMenu>
						</Dropdown>
					</DisplayTemplate>

				</DataGridColumn>
				<DataGridColumn TItem="GestionDto" Field="@nameof(GestionDto.Name)" Caption="@L["Name"]" />
				
			</DataGridColumns>
		</DataGrid>
	</CardBody>
</Card>

<Modal @ref="CreateGestionModal"> 
	<ModalContent IsCentered="true">
		<Form>
			<ModalHeader>
				<ModalTitle>@L["AddGestion"]</ModalTitle>
				<CloseButton Clicked="CloseCreateGestionModal" />
			</ModalHeader>
			<ModalBody>
				<Field>
					<FieldLabel>@L["Name"]</FieldLabel>
					<TextEdit @bind-Text="@NewGestion.Name" />
				</Field>
			</ModalBody>
			<ModalFooter>
				<Button Color="Color.Primary" Type="@ButtonType.Submit" Clicked="CreateGestionAsync">@L["Save"]</Button>
				<Button Color="Color.Secondary" Clicked="CloseCreateGestionModal">@L["Cancel"]</Button>
			</ModalFooter>
		</Form>
	</ModalContent>

</Modal>

<Modal @ref="EditGestionModal">
	<ModalContent IsCentered="true">
		<Form>
			<ModalHeader>
				<ModalTitle>@L["EditGestion"]</ModalTitle>
				<CloseButton Clicked="CloseEditGestionModal" />
			</ModalHeader>
			<ModalBody>
				<Field>
					<FieldLabel>@L["Name"]</FieldLabel>
					<TextEdit @bind-Text="@EditingGestion.Name" />
				</Field>
			</ModalBody>
			<ModalFooter>
				<Button Color="Color.Primary" Type="@ButtonType.Submit" Clicked="UpdateGestionAsync">@L["Save"]</Button>
				<Button Color="Color.Secondary" Clicked="CloseEditGestionModal">@L["Cancel"]</Button>
			</ModalFooter>
		</Form>
	</ModalContent>
</Modal>
